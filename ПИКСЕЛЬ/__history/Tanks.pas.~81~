unit Tanks;

interface
uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.ExtCtrls, Vcl.StdCtrls,
  Vcl.Imaging.pngimage, System.ImageList, Vcl.ImgList;
type
  TForm4 = class(TForm)
    Timer1: TTimer;
    Tank: TImage;
    EnemyTank: TImage;
    Bullet: TImage;
    Shape1: TShape;
    Shape2: TShape;
    Shape3: TShape;
    Shape4: TShape;
    procedure FormKeyDown(Sender: TObject; var Key: Word; Shift: TShiftState);
    procedure Timer1Timer(Sender: TObject);
    procedure FormCreate(Sender: TObject);
  private
    { Private declarations }
    procedure CreateBullet;
    procedure CreateEnemyTank;
  public
    { Public declarations }
  end;
var
  Form4: TForm4;
implementation
{$R *.dfm}

uses Result;
procedure TForm4.FormCreate(Sender: TObject);
begin
  Tank.Left := ClientWidth div 1 - Tank.Width div 2;
  Tank.Top := ClientHeight - Tank.Height - 200;
  CreateEnemyTank;
  KeyPreview := True;
end;
procedure TForm4.CreateBullet;
begin
  Bullet := TImage.Create(Self);
  Bullet.Parent := Self;
  Bullet.Picture.LoadFromFile('снаряд.png');
  Bullet.Left := Tank.Left + 20;
  Bullet.Top := Tank.Top-10;
end;

procedure TForm4.CreateEnemyTank;
begin
  EnemyTank := TImage.Create(Self);
  EnemyTank.Parent := Self;
  EnemyTank.Left := Random(ClientWidth - EnemyTank.Width);
  EnemyTank.Top := 200;
end;
procedure TForm4.FormKeyDown(Sender: TObject; var Key: Word;
  Shift: TShiftState);
begin
  case Key of
    VK_SPACE:
      begin
        if not Assigned(Bullet) then
          CreateBullet;
      end;
    VK_UP:
      begin
        Tank.Top := Tank.Top - 5;
      end;
    VK_DOWN:
      begin
        Tank.Top := Tank.Top + 5;
      end;
    VK_LEFT:
      begin
        Tank.Left := Tank.Left - 5;
      end;
    VK_RIGHT:
      begin
        Tank.Left := Tank.Left + 5;
      end;
  end;
end;

procedure TForm4.Timer1Timer(Sender: TObject);
begin
  if (Tank.Left < 0) then
    Tank.Left := 0;
  if (Tank.Left + Tank.Width > ClientWidth) then
    Tank.Left := ClientWidth - Tank.Width;
  if (Tank.Top < 0) then
    Tank.Top := 0;
  if (Tank.Top + Tank.Height > ClientHeight) then
    Tank.Top := ClientHeight - Tank.Height;
  if Assigned(EnemyTank) then
  begin
    EnemyTank.Top := EnemyTank.Top + 1;
    if (EnemyTank.Top > ClientHeight) then
    begin
      EnemyTank.Free;
      CreateEnemyTank;
    end;
  end;
  if Assigned(Bullet) then
begin
  Bullet.Top := Bullet.Top - 5;
  if (Bullet.Top + Bullet.Height < 0) then
  begin
    Bullet.Free;
    Bullet := nil;
  end;
end;
end;
end.
